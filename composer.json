{
  "name": "blockstudio/blockstudio",
  "description": "The block framework for WordPress.",
  "minimum-stability": "stable",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "dennis",
      "email": "dnnsjsk@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-dom": "*",
    "ext-json": "*",
    "ext-zip": "*",
    "ext-simplexml": "*",
    "ext-libxml": "*",
    "ext-iconv": "*",
    "tailwindphp/tailwindphp": "^1.0",
    "scssphp/scssphp": "^2.1",
    "matthiasmullie/minify": "^1.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "humbug/php-scoper": "^0.18.18"
  },
  "autoload": {
    "classmap": [
      "lib/"
    ]
  },
  "scripts": {
    "scope": "vendor/bin/php-scoper add-prefix --output-dir=lib --force",
    "cs": "phpcs",
    "cs:fix": "phpcbf"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
