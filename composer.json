{
  "name": "blockstudio/blockstudio",
  "description": "The block framework for WordPress.",
  "minimum-stability": "stable",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "dennis",
      "email": "dnnsjsk@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-dom": "*",
    "ext-json": "*",
    "ext-zip": "*",
    "ext-simplexml": "*",
    "ext-libxml": "*",
    "ext-iconv": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "brain/monkey": "^2.6",
    "mockery/mockery": "^1.6",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "classmap": [
      "lib/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Blockstudio\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "scope": "vendor/bin/php-scoper add-prefix --output-dir=lib --force",
    "test": "@test:unit",
    "test:unit": "phpunit --testsuite unit",
    "test:coverage": "phpunit --testsuite unit --coverage-html coverage",
    "cs": "phpcs",
    "cs:fix": "phpcbf"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
