{
  "$schema": "https://blockstudio.dev/schema/block",
  "name": "blockstudio/type-conditions-default",
  "title": "Conditions Default",
  "category": "blockstudio-test-native",
  "icon": "star-filled",
  "description": "Test that conditional fields respect default values on first load.",
  "blockstudio": {
    "attributes": [
      {
        "id": "backgroundType",
        "type": "select",
        "label": "Background Type",
        "default": "gradient",
        "options": [
          {
            "label": "Color",
            "value": "color"
          },
          {
            "label": "Gradient",
            "value": "gradient"
          },
          {
            "label": "Image",
            "value": "image"
          }
        ]
      },
      {
        "id": "backgroundColor",
        "type": "color",
        "label": "Background Color",
        "conditions": [
          [
            {
              "id": "backgroundType",
              "operator": "==",
              "value": "color"
            }
          ]
        ]
      },
      {
        "id": "backgroundGradient",
        "type": "gradient",
        "label": "Background Gradient",
        "conditions": [
          [
            {
              "id": "backgroundType",
              "operator": "==",
              "value": "gradient"
            }
          ]
        ]
      },
      {
        "id": "backgroundImage",
        "type": "files",
        "label": "Background Image",
        "conditions": [
          [
            {
              "id": "backgroundType",
              "operator": "==",
              "value": "image"
            }
          ]
        ]
      }
    ]
  }
}
