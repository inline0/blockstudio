{
  "$schema": "https://blockstudio.dev/schema/block",
  "name": "blockstudio/type-repeater-min-rows",
  "title": "Native Repeater Min Rows",
  "category": "blockstudio-test-native",
  "icon": "star-filled",
  "description": "Tests repeater with min rows and field-level defaults.",
  "keywords": ["native", "repeater", "min"],
  "blockstudio": {
    "conditions": [
      [
        {
          "type": "postType",
          "operator": "==",
          "value": "post"
        }
      ]
    ],
    "attributes": [
      {
        "id": "entries",
        "type": "repeater",
        "label": "Entries",
        "min": 3,
        "textButton": "Add entry",
        "attributes": [
          {
            "id": "name",
            "type": "text",
            "label": "Name",
            "default": "Default Name"
          },
          {
            "id": "value",
            "type": "number",
            "label": "Value",
            "default": 42
          },
          {
            "id": "enabled",
            "type": "toggle",
            "label": "Enabled",
            "default": true
          }
        ]
      }
    ]
  }
}
