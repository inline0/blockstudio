{
  "$schema": "https://blockstudio.dev/schema/block",
  "name": "blockstudio/type-repeater-radio-button-group",
  "title": "Native Repeater Radio Button Group",
  "category": "blockstudio-test-native",
  "icon": "star-filled",
  "description": "Native Blockstudio Repeater Radio Button Group block.",
  "keywords": [
    "repeater",
    "radio",
    "button",
    "group",
    "native"
  ],
  "blockstudio": {
    "attributes": [
      {
        "id": "repeater",
        "type": "repeater",
        "label": "Repeater",
        "min": 1,
        "max": 1,
        "textButton": "Add repeater",
        "attributes": [
          {
            "id": "defaultNumberBothWrongDefault",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Default - Number - Both - Wrong Default",
            "options": [
              {
                "value": 1,
                "label": "One"
              },
              {
                "value": 2,
                "label": "Two"
              },
              {
                "value": 3,
                "label": "Three"
              }
            ],
            "default": "three-1",
            "returnFormat": "both",
            "allowNull": true
          },
          {
            "id": "defaultValueLabel",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Default - Label",
            "options": [
              {
                "value": "one",
                "label": "One"
              },
              {
                "value": "two",
                "label": "Two"
              },
              {
                "value": "three",
                "label": "Three"
              }
            ],
            "default": "three",
            "returnFormat": "label"
          },
          {
            "id": "defaultNumberArray",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Default - Number - Array",
            "options": [
              1,
              2,
              3
            ],
            "default": 3
          },
          {
            "id": "defaultNumberArrayBoth",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Default - Number - Array - Both",
            "options": [
              1,
              2,
              3
            ],
            "default": 3,
            "returnFormat": "both"
          },
          {
            "id": "defaultValueStringNumber",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Default - String Number",
            "options": [
              {
                "value": "1",
                "label": "One"
              },
              {
                "value": "2",
                "label": "Two"
              },
              {
                "value": "3",
                "label": "Three"
              }
            ],
            "default": "2"
          },
          {
            "id": "defaultValueStringNumberBoth",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Default - String Number - Array - Both",
            "options": [
              "1",
              "2",
              "3"
            ],
            "default": "3",
            "returnFormat": "both"
          },
          {
            "id": "populateQuery",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Populate - Query",
            "options": [
              {
                "value": "one",
                "label": "One"
              },
              {
                "value": "two",
                "label": "Two"
              },
              {
                "value": "three",
                "label": "Three"
              }
            ],
            "populate": {
              "type": "query",
              "query": "posts"
            },
            "default": 1388
          },
          {
            "id": "populateQueryIdBefore",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Populate - Query ID - Before",
            "options": [
              {
                "value": "one",
                "label": "One"
              },
              {
                "value": "two",
                "label": "Two"
              },
              {
                "value": "three",
                "label": "Three"
              }
            ],
            "populate": {
              "type": "query",
              "query": "posts",
              "returnFormat": {
                "value": "id",
                "label": "post_name"
              },
              "position": "before"
            },
            "default": 1388
          },
          {
            "id": "populateCustom",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Populate - Custom",
            "options": [
              {
                "value": "one",
                "label": "One"
              },
              {
                "value": "two",
                "label": "Two"
              },
              {
                "value": "three",
                "label": "Three"
              }
            ],
            "populate": {
              "type": "custom",
              "custom": "default"
            },
            "default": "three"
          },
          {
            "id": "populateCustomArrayBeforeBoth",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Populate - Custom - Array - Before - Both",
            "options": [
              "one",
              "two",
              "three"
            ],
            "populate": {
              "type": "custom",
              "custom": "array",
              "position": "before"
            },
            "default": "three",
            "returnFormat": "both"
          },
          {
            "id": "populateCustomOnly",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Populate only - Custom - Array",
            "populate": {
              "type": "custom",
              "custom": "array"
            },
            "default": "custom-1"
          },
          {
            "id": "populateOnlyQuery",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Populate only - Query",
            "populate": {
              "type": "query",
              "query": "posts"
            },
            "default": 1388
          },
          {
            "id": "populateOnlyQueryUser",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Populate only - Query - User",
            "populate": {
              "type": "query",
              "query": "users"
            },
            "default": 644
          },
          {
            "id": "populateOnlyQueryTerm",
            "type": "radio",
            "display": "buttonGroup",
            "label": "Populate only - Query - Term",
            "populate": {
              "type": "query",
              "query": "terms"
            },
            "default": 6
          }
        ]
      }
    ]
  }
}
