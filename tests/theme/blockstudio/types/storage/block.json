{
  "$schema": "https://blockstudio.dev/schema/block",
  "name": "blockstudio/type-storage",
  "title": "Storage Test",
  "category": "blockstudio-test-native",
  "icon": "database",
  "description": "Test block for storage feature.",
  "keywords": [
    "storage",
    "meta",
    "option"
  ],
  "blockstudio": {
    "attributes": [
      {
        "id": "block_only",
        "type": "text",
        "label": "Block Storage (default)"
      },
      {
        "id": "meta_only",
        "type": "text",
        "label": "Post Meta Only",
        "storage": {
          "type": "postMeta"
        }
      },
      {
        "id": "block_and_meta",
        "type": "text",
        "label": "Block + Post Meta",
        "storage": {
          "type": ["block", "postMeta"],
          "postMetaKey": "custom_meta_key"
        }
      },
      {
        "id": "all_storage",
        "type": "text",
        "label": "All Storage Types",
        "storage": {
          "type": ["block", "postMeta", "option"],
          "postMetaKey": "all_meta",
          "optionKey": "all_option"
        }
      }
    ]
  }
}
