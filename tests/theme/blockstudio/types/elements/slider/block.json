{
  "$schema": "https://blockstudio.dev/schema/block",
  "version": "1.0.0",
  "textdomain": "blockstudio",
  "apiVersion": 2,
  "name": "blockstudio-element/slider",
  "title": "Slider",
  "category": "blockstudio-elements",
  "icon": "star-filled",
  "description": "Display a carousel of images.",
  "keywords": [
    "blockstudio",
    "slider"
  ],
  "example": {
    "attributes": {
      "images": {
        "blockstudio": true,
        "type": "image",
        "amount": 20
      },
      "height": 400
    }
  },
  "blockstudio": {
    "attributes": [
      {
        "type": "group",
        "title": "Images",
        "attributes": [
          {
            "id": "images",
            "type": "files",
            "allowedTypes": "image",
            "multiple": true,
            "size": true
          }
        ]
      },
      {
        "type": "group",
        "title": "Appearance",
        "attributes": [
          {
            "id": "direction",
            "type": "select",
            "label": "Direction",
            "default": "horizontal",
            "options": [
              {
                "value": "horizontal",
                "label": "Horizontal"
              },
              {
                "value": "vertical",
                "label": "Vertical"
              }
            ]
          },
          {
            "id": "height",
            "type": "number",
            "label": "Height",
            "default": 400
          },
          {
            "id": "pagination",
            "type": "toggle",
            "label": "Pagination",
            "default": true
          },
          {
            "id": "navigation",
            "type": "toggle",
            "label": "Navigation",
            "default": true
          },
          {
            "id": "loop",
            "type": "toggle",
            "label": "Loop",
            "default": false
          }
        ]
      }
    ]
  }
}
