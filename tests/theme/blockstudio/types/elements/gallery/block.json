{
  "$schema": "https://app.blockstudio.dev/schema",
  "version": "1.0.0",
  "textdomain": "blockstudio",
  "apiVersion": 2,
  "name": "blockstudio-element/gallery",
  "title": "Gallery",
  "category": "blockstudio-elements",
  "icon": "star-filled",
  "description": "Arrange images in a gallery layout.",
  "keywords": [
    "blockstudio",
    "gallery",
    "masonry"
  ],
  "example": {
    "attributes": {
      "images": {
        "blockstudio": true,
        "type": "image",
        "amount": 20
      }
    }
  },
  "blockstudio": {
    "attributes": [
      {
        "type": "group",
        "title": "Images",
        "attributes": [
          {
            "id": "images",
            "type": "files",
            "allowedTypes": "image",
            "multiple": true,
            "size": true
          }
        ]
      },
      {
        "type": "group",
        "title": "Appearance",
        "attributes": [
          {
            "id": "type",
            "type": "select",
            "label": "Type",
            "default": "masonry",
            "options": [
              {
                "value": "masonry",
                "label": "Masonry"
              },
              {
                "value": "grid",
                "label": "Grid"
              }
            ]
          },
          {
            "id": "width",
            "type": "number",
            "label": "Maximum column width",
            "help": "in pixels",
            "default": 240
          },
          {
            "id": "gap",
            "type": "number",
            "label": "Gap",
            "default": 12
          }
        ]
      }
    ]
  }
}