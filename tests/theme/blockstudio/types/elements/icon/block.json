{
  "$schema": "https://app.blockstudio.dev/schema",
  "apiVersion": 2,
  "version": "1.0.0",
  "textdomain": "blockstudio",
  "name": "blockstudio-element/icon",
  "title": "Icon",
  "category": "blockstudio-elements",
  "icon": "star-filled",
  "description": "Display an icon.",
  "keywords": [
    "blockstudio",
    "icon"
  ],
  "example": {
    "attributes": {
      "icon": {
        "set": "fontawesome-free",
        "subSet": "solid",
        "icon": "heart"
      },
      "color": {
        "value": "#8B5CF6"
      }
    }
  },
  "blockstudio": {
    "attributes": [
      {
        "type": "group",
        "title": "Icon",
        "attributes": [
          {
            "id": "icon",
            "type": "icon",
            "default": {
              "set": "fontawesome-free",
              "subSet": "solid",
              "icon": "heart"
            }
          }
        ]
      },
      {
        "type": "group",
        "title": "Appearance",
        "attributes": [
          {
            "id": "size",
            "type": "number",
            "label": "Size"
          },
          {
            "id": "color",
            "type": "color",
            "label": "Color"
          }
        ]
      }
    ]
  }
}
