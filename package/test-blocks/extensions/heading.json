{
  "name": "core/heading",
  "blockstudio": {
    "extend": {
      "priority": 10
    },
    "attributes": [
      {
        "type": "group",
        "title": "Addons color",
        "attributes": [
          {
            "id": "headingColor",
            "type": "color",
            "label": "Heading color",
            "options": [
              {
                "name": "red",
                "value": "#f00",
                "slug": "red"
              },
              {
                "name": "white",
                "value": "#fff",
                "slug": "white"
              },
              {
                "name": "blue",
                "value": "#00f",
                "slug": "blue"
              }
            ],
            "default": "#f00",
            "set": [
              {
                "attribute": "style",
                "value": "color: {attributes.headingColor.value};;;"
              }
            ]
          },
          {
            "id": "headingBackground",
            "type": "gradient",
            "label": "Heading background",
            "options": [
              {
                "name": "JShine",
                "value": "linear-gradient(135deg,#12c2e9 0%,#c471ed 50%,#f64f59 100%)",
                "slug": "jshine"
              },
              {
                "name": "Moonlit Asteroid",
                "value": "linear-gradient(135deg,#0F2027 0%, #203A43 0%, #2c5364 100%)",
                "slug": "moonlit-asteroid"
              },
              {
                "name": "Rastafarie",
                "value": "linear-gradient(135deg,#1E9600 0%, #FFF200 0%, #FF0000 100%)",
                "slug": "rastafari"
              }
            ],
            "default": "linear-gradient(135deg,#12c2e9 0%,#c471ed 50%,#f64f59 100%)",
            "set": [
              {
                "attribute": "style",
                "value": "background: {attributes.headingBackground.value};;;"
              }
            ]
          }
        ]
      },
      {
        "type": "group",
        "title": "Addons class",
        "attributes": [
          {
            "id": "headingClassSelect",
            "type": "select",
            "label": "Heading class",
            "options": [
              {
                "value": "class-1",
                "label": "Class 1"
              },
              {
                "value": "class-2",
                "label": "Class 2"
              }
            ],
            "default": "class-2",
            "set": [
              {
                "attribute": "class",
                "value": "select-{attributes.headingClassSelect}"
              }
            ]
          },
          {
            "id": "headingClassSelectPopulateValue",
            "type": "select",
            "label": "Heading class populate value",
            "options": [
              {
                "value": "one",
                "label": "One"
              },
              {
                "value": "two",
                "label": "Two"
              },
              {
                "value": "three",
                "label": "Three"
              }
            ],
            "populate": {
              "type": "query",
              "query": "posts"
            },
            "default": 1386,
            "set": [
              {
                "attribute": "class",
                "value": "select-post-{attributes.headingClassSelectPopulateValue.post_name}"
              }
            ]
          },
          {
            "id": "headingClassSelectPopulateLabel",
            "type": "select",
            "label": "Heading class populate label",
            "options": [
              {
                "value": "one",
                "label": "One"
              },
              {
                "value": "two",
                "label": "Two"
              },
              {
                "value": "three",
                "label": "Three"
              }
            ],
            "populate": {
              "type": "query",
              "query": "posts"
            },
            "returnFormat": "label",
            "default": 1099,
            "set": [
              {
                "attribute": "class",
                "value": "select-post-{attributes.headingClassSelectPopulateLabel}"
              }
            ]
          },
          {
            "id": "headingClassSelectPopulateBoth",
            "type": "select",
            "label": "Heading class populate both",
            "options": [
              {
                "value": "one",
                "label": "One"
              },
              {
                "value": "two",
                "label": "Two"
              },
              {
                "value": "three",
                "label": "Three"
              }
            ],
            "populate": {
              "type": "query",
              "query": "posts"
            },
            "returnFormat": "both",
            "default": 1386,
            "set": [
              {
                "attribute": "class",
                "value": "select-post-{attributes.headingClassSelectPopulateBoth.value.post_name}-{attributes.headingClassSelectPopulateBoth.label}"
              }
            ]
          }
        ]
      }
    ]
  }
}
